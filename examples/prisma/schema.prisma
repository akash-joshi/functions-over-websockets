generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  name      String
  username  String
  email     String
  website   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Todo      Todo[]
}

model Todo {
  id        String   @id @default(cuid())
  status    Boolean
  text      String
  owner     User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
}
